<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% elsif flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_with url: session_path, local: true do |form| %>
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Video Platform</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= form.label :email_address, "Email address", class: "form-label" %>
                    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], class: "form-control form-control-lg" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= form.label :password, "Password", class: "form-label" %>
                    <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "form-control form-control-lg" %>
                  </div>

                  <div class="pt-1 mb-4">
                    <%= form.submit "Login", class: "btn btn-dark btn-lg btn-block" %>
                  </div>
                <% end %>

                <a class="small text-muted" href="<%= new_password_path %>">Forgot password?</a>
                <p class="mb-5 pb-lg-2" style="color: #393f81;">Need help? Contact support</p>
                <a href="#" class="small text-muted">Terms of use</a>
                <a href="#" class="small text-muted">Privacy policy</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
